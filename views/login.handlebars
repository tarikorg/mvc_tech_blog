<h1 class="text-3xl font-bold mb-4">Login</h1>

<form action="/login" method="POST" class="bg-gray-100 p-4 rounded-md">
    <input type="text" name="username" placeholder="Username" required class="block w-full mb-2 p-2 rounded-md">
    <input type="password" name="password" placeholder="Password" required class="block w-full mb-2 p-2 rounded-md">
    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-md">Login</button>
</form>
