<!-- Dashboard Content -->
<div class="container mx-auto mt-8">
    <h1 class="text-3xl font-bold mb-4">Dashboard</h1>

    <!-- Create Post Form -->
    <form action="/dashboard" method="POST" class="mb-4">
        <input type="hidden" name="userId" value="{{userId}}">
        <div class="mb-4">
            <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
            <input type="text" name="title" id="title" class="mt-1 p-2 block w-full border-gray-300 rounded-md"
                required>
        </div>
        <div class="mb-4">
            <label for="content" class="block text-sm font-medium text-gray-700">Content</label>
            <textarea name="content" id="content" rows="5" class="mt-1 p-2 block w-full border-gray-300 rounded-md"
                required></textarea>
        </div>
        <button type="submit" class="bg-black text-white px-4 py-2 rounded-md">Create Post</button>
    </form>

    <!-- User Posts -->
    <div class="grid grid-cols-1 gap-4">
        {{#each post}}
        <div class="bg-white p-4 rounded-md shadow-md">
            <h2 class="text-xl font-bold mb-2">{{this.title}}</h2>
            <p class="text-gray-500 mb-2">Posted by {{user.username}} on {{this.createdAt}}</p>
            <p>{{this.content}}</p>
            <div class="flex justify-between items-center mt-2">
                <form action="/dashboard/update/{{this.id}}" method="POST" class="flex items-center">
                    <input type="text" name="title" value="{{this.title}}" class="bg-gray-200 px-2 py-1 mr-2">
                    <input type="text" name="content" value="{{this.content}}" class="bg-gray-200 px-2 py-1 mr-2">
                    <button type="submit" class="text-white bg-blue-500 px-4 py-2 rounded">UPDATE</button>
                </form>
                <form action="/dashboard/{{this.id}}" method="POST">
                    <button type="submit" class="text-white bg-red-500 px-4 py-2 rounded">Delete</button>
                </form>
            </div>

        </div>
        {{/each}}
    </div>
</div>